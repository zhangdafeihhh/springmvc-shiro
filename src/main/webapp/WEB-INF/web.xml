<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>mp-manage</display-name>
    <!-- 设置运行环境变量-->
    <context-param>
        <param-name>env.name</param-name>  
        <param-value>${env.name}</param-value>
        <description>运行环境变量，如：dev、test、pro、online，这样在Servlet容器中可以获得到此值，利用此值可以做一些区分运行环境的业务逻辑</description>  
    </context-param>
    
    <!-- 解决java.beans.Introspector导致的内存泄漏的问题(必须放在第1个位置)-->
    <listener>
        <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>
  
